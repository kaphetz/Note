<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kienpt.note.AddUpdateActivity">

    <TextView
        android:id="@+id/tv_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/ex_time" />

    <com.example.kienpt.note.Bean.LinedEditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dateTime"
        android:hint="@string/title"
        android:ems="10"
        android:inputType="textMultiLine|textNoSuggestions"
        android:imeOptions="actionNone"
        android:paddingLeft="20dp"
        android:textSize="@dimen/title_size"
        android:textStyle="bold" />

    <com.example.kienpt.note.Bean.LinedEditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_title"
        android:hint="@string/note"
        android:inputType="textMultiLine|textNoSuggestions"
        android:imeOptions="actionNone"
        android:paddingLeft="20dp"
        android:textSize="@dimen/note_size" />

    <ImageView
        android:id="@+id/img_alarm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/et_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_alarm" />

    <TextView
        android:id="@+id/tv_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_content"
        android:layout_marginTop="33dp"
        android:layout_toRightOf="@id/img_alarm"
        android:clickable="true"
        android:onClick="showDateTimePicker"
        android:text="@string/alarm"
        android:textSize="@dimen/alarm_size" />

    <LinearLayout
        android:id="@+id/ll_dateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_content"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/img_alarm">

        <Spinner
            android:id="@+id/spn_date"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />


        <Spinner
            android:id="@+id/spn_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" />

        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@null"
            android:onClick="hideDateTimePicker"
            android:src="@drawable/ic_x_mark" />

    </LinearLayout>


</RelativeLayout>
